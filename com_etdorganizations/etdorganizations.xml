<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.8" method="upgrade">
    <name>COM_ETDORGANIZATIONS</name>
    <author>ETD Solutions</author>
    <creationDate>March 2017</creationDate>
    <copyright>Copyright (C) 2017 - 2018 ETD Solutions. All rights reserved.</copyright>
    <license>GNU General Public License v3</license>
    <authorEmail>support@etd-solutions.com</authorEmail>
    <authorUrl>etd-solutions.com</authorUrl>
    <version>1.0.1</version>
    <description>COM_ETDORGANIZATIONS_XML_DESCRIPTION</description>

    <!-- Runs on install -->
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <!-- Runs on uninstall -->
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <!-- Media files -->
    <media destination="com_etdorganizations" folder="media">
        <folder>dist</folder>
        <folder>js</folder>
        <folder>less</folder>
    </media>

    <files folder="site">
        <filename>etdorganizations.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="site">
        <language tag="fr-FR">language/fr-FR/fr-FR.com_etdorganizations.ini</language>
    </languages>

    <administration>

        <menu view="organizations" link="option=com_etdorganizations&amp;view=organizations">com_etdorganizations</menu>

        <submenu>
            <menu link="option=com_etdorganizations&amp;view=organizations"
                  view="organizations"
                  alt="EtdOrganizations/Organizations">
                com_etdorganizations_organizations
            </menu>

            <menu link="option=com_categories&amp;extension=com_etdorganizations"
                  view="categories"
                  alt="EtdOrganizations/Categories">
                com_etdorganizations_categories
            </menu>
        </submenu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>etdorganizations.php</filename>
            <filename>controller.php</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="admin">
            <language tag="fr-FR">language/fr-FR/fr-FR.com_etdorganizations.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_etdorganizations.sys.ini</language>
        </languages>

    </administration>

    <!-- Installation / uninstallation script file -->
    <scriptfile>script.etdorganizations.php</scriptfile>
</extension>
